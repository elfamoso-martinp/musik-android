<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">


        <LinearLayout
            android:id="@+id/helloContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bonjour !"
                android:textSize="20sp"
                android:textColor="@color/dark_grey"/>

        </LinearLayout>

        <TextView
            android:id="@+id/coursText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voici les cours disponibles"
            android:textSize="15sp"
            android:textColor="@color/dark_grey"
            android:layout_below="@id/helloContainer"
            android:paddingHorizontal="20dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/coursContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/coursText"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="20dp"></androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>


</FrameLayout>